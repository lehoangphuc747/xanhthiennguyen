    // Normalize Vietnamese text to uppercase without diacritics
    function normalizeVietnamese(str) {
      return str
        .normalize('NFD')
        .replace(/[\u0300-\u036f]/g, '')
        .toUpperCase()
        .replace(/ƒê/g, 'D');
    }

